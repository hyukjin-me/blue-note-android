<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/helper_more_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue_btn"
        android:gravity="center"
        android:minWidth="48dp"
        android:minHeight="30dp"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="@dimen/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/helper_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/helper_more_home"
        app:layout_constraintStart_toStartOf="@id/helper_more_home"
        app:layout_constraintTop_toBottomOf="@id/helper_more_home" />

    <TextView
        android:id="@+id/helper_more_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue_btn"
        android:gravity="center"
        android:minWidth="48dp"
        android:minHeight="30dp"
        android:text="@string/close"
        android:textColor="@color/white"
        android:textSize="@dimen/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helper_line" />
</androidx.constraintlayout.widget.ConstraintLayout>