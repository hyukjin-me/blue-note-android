<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        공식문서
        테마 속성 정보
        https://material.io/develop/android/theming/color
        https://material.io/design/color/the-color-system.html#color-theme-creation
        다크 테마 가이드
        https://material.io/design/color/dark-theme.html#ui-application

        코드랩
        테마 색변경
        https://developer.android.com/codelabs/basic-android-kotlin-training-change-app-theme#2
        다크 테마
        https://developer.android.com/codelabs/basic-android-kotlin-training-change-app-theme#4

        블로그
        https://blog.prototypr.io/how-to-design-a-dark-theme-for-your-android-app-3daeb264637
    -->

    <style name="Theme.BlueNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_bg</item>
        <item name="colorPrimaryVariant">@color/blue_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_btn</item>
        <item name="colorSecondaryVariant">@color/blue_text</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="Theme.Drawer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Drawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="backgroundBlue">
        <item name="android:background">@color/blue_bg</item>
    </style>

    <style name="bottomNavStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">@dimen/elevation_0</item>
        <item name="itemBackground">@color/blue_bg</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="addFabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/normal</item>
        <item name="android:layout_marginBottom">@dimen/normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/blue_btn</item>
        <item name="srcCompat">@drawable/ic_baseline_add_24</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="infoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/info</item>
    </style>

    <style name="inputEditStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <!-- EditText 밑줄, 입력 내용을 길게 눌렀을때 나타나는 범위조절 컨트롤러 색변경을 위해 설정함 -->
    <style name="inputEditTheme">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/blue_control_normal</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>

    <!-- EditText 밑줄, 입력 내용을 길게 눌렀을때 나타나는 범위조절 컨트롤러 색변경을 위해 설정함 -->
    <style name="scrollEditTheme">
        <item name="colorControlActivated">@color/white</item>
<!--        <item name="colorControlNormal">@color/blue_control_normal</item>-->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>

    <style name="question_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/half</item>
        <item name="android:layout_marginBottom">@dimen/half</item>
        <item name="android:minWidth">@dimen/question_size</item>
        <item name="android:minHeight">@dimen/question_size</item>
        <item name="backgroundTint">@color/blue_btn</item>
        <item name="android:tag">none</item>
    </style>

    <style name="moreBtnStyle">
        <item name="android:minHeight">100dp</item>
    </style>
</resources>